<?xml version="1.0" encoding="utf-8"?>

<android.support.design.card.MaterialCardView
    android:layout_margin="15dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:behavior_hideable="false"
    android:id="@+id/bottom_sheet_room_details"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:cardCornerRadius="10dp"
    android:translationZ="20dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="20dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lay_title"
            android:weightSum="1"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/room_details"
                android:textColor="@color/gray"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iv_arrow"
                android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <android.support.v4.widget.NestedScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_below="@+id/lay_title"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text="Room Number : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:id="@+id/tv_room_no"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text="Check In : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/tv_check_in"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text="Check Out : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/tv_check_out"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text="Adults : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/tv_adults"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text="Kids : "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/tv_kids"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:text="Ordered On : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/tv_ordered_on"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:text="Arrived Time : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/tv_arrive_time"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:text="Departure Time : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/tv_departure_time"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:text="Group Name : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/tv_group_name_code"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:text="Room Type : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                        <TextView
                            android:gravity="right"
                            android:layout_weight="1"
                            android:visibility="visible"
                            android:id="@+id/tv_room_id"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.design.card.MaterialCardView>