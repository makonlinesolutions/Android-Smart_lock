<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UnlockRemotelyActivity"
    android:background="#1E747373">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Unlock Remotely"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/settings_text2"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="This Feature allows you to Unlock the Smart Lock Remotely via Gateway.This Feature can ONLY be Torned ON or OFF via Bluetooth."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/settings_text"
                android:padding="10dp"
                android:text="Current Mode"/>

            <TextView
                android:id="@+id/tv_on_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/settings_text"
                android:padding="10dp"
                android:text="ON"/>
        </LinearLayout>


        <Button
            android:layout_below="@+id/tv_time_date"
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:text="Turn OFF"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/button_bg"
            android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>